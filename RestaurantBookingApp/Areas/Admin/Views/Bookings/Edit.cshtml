@model BookingVM


<div class="card-header bg-secondary bg-gradient mt-0 py-3">
    <div class="row">
        <div class="col-12 text-center">
            <h2 class="text-white py-2">Edit Category</h2>

        </div>

    </div>
</div>
<div class="card-body p-4">


    <form method="post" class="row">
        <input asp-for="Id" hidden />
        <div class="border p-3 ">


            @*  <div class="text-danger" asp-validation-summary="ModelOnly"></div> *@
            <div class="form-floating py-2 col-12">
                <input asp-for="BookingDate" class="form-control border-0 shadow" />
                <label asp-for="BookingDate" class="ms-2"></label>
                <span asp-validation-for="BookingDate" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-12">
                <input asp-for="NumberOfGuests" class="form-control border-0 shadow" />
                <label asp-for="NumberOfGuests" class="ms-2"></label>
                <span asp-validation-for="NumberOfGuests" class="text-danger"></span>
            </div>
            <div class="row pt-2">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-primary form-control">Edit</button>
                </div>

                <div class="col-6 col-md-3">

                    <a asp-controller="Bookings" asp-action="Index" class="btn btn-outline-primary border form-control">Back To List</a>

                </div>
            </div>

        </div>

    </form>

</div>






@section Scripts {

    @{
        <partial name="_ValidationScriptsPartial" />
    }
}