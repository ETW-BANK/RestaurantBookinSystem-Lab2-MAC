@model IEnumerable<RestaurantBookingApp.Models.ViewModel.MenuVM>

@{
    ViewData["Title"] = "GetAllMenu";
}

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient mt-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Menu List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Menus" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Create New Menu
                </a>
            </div>
        </div>

        <table id="tblData" class="table table-bordered table-striped" width="100%">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Price</th>
                    <th>Is Available</th>
                    <th>Image</th>
                    <th>Actions</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts {
    <script src="~/js/MenuList.js"></script>
}
