@model MenuVM

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-danger bg-gradient mt-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Menu</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4 text-center">
        <h4>Are you sure you want to delete this Menu?</h4>
        <p>
            <strong>Menu Title: </strong> @Model.Title  <br />
            <strong>Price: </strong> @Model.price  <br />
        </p>

        <form asp-action="DeleteConfirmed" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="row pt-2">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-danger form-control">Delete</button>
                </div>

                <div class="col-6 col-md-3">
                    <a asp-controller="Menus" asp-action="Index" class="btn btn-outline-secondary border form-control">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
