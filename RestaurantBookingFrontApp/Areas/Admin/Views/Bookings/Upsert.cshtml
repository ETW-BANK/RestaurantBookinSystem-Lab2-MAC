@model BookingVM

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient mt-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">@(Model.BookingId != 0 ? "Update" : "Create") Booking</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <input asp-for="BookingId" hidden />
            <input asp-for="ApplicationUserId" hidden />

            <div class="row">
                <div class="col-10">
                    <div class="border p-3">
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Name" class="form-control border-0 shadow" />
                            <label asp-for="Name" class="ms-2"></label>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <input asp-for="BookingDate" type="date" class="form-control border-0 shadow" />
                            <label asp-for="BookingDate" class="ms-2"></label>
                            <span asp-validation-for="BookingDate" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <input asp-for="BookingTime" type="time" class="form-control border-0 shadow" />
                            <label asp-for="BookingTime" class="ms-2"></label>
                            <span asp-validation-for="BookingTime" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <input asp-for="TableNumber" class="form-control border-0 shadow" />
                            <label asp-for="TableNumber" class="ms-2"></label>
                            <span asp-validation-for="TableNumber" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <input asp-for="NumberOfGuests" class="form-control border-0 shadow" />
                            <label asp-for="NumberOfGuests" class="ms-2"></label>
                            <span asp-validation-for="NumberOfGuests" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <input asp-for="Phone" class="form-control border-0 shadow" />
                            <label asp-for="Phone" class="ms-2"></label>
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <input asp-for="Email" class="form-control border-0 shadow" />
                            <label asp-for="Email" class="ms-2"></label>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <select asp-for="BookingStatus" class="form-control border-0 shadow">
                                <option value="Active">Active</option>
                                <option value="Cancelled">Cancelled</option>
                            </select>
                            <label asp-for="BookingStatus" class="ms-2"></label>
                            <span asp-validation-for="BookingStatus" class="text-danger"></span>
                        </div>

                    

                        <div class="row pt-2">
                            <div class="col-6 col-md-3">
                                @if (Model.BookingId != 0)
                                {
                                    <button type="submit" class="btn btn-primary form-control">Update</button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-primary form-control">Create</button>
                                }
                            </div>

                            <div class="col-6 col-md-3">
                                <a asp-controller="Bookings" asp-action="Index" class="btn btn-outline-primary border form-control">Back To List</a>
                            </div>
                        </div>
                    </div>
                </div>

              
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}