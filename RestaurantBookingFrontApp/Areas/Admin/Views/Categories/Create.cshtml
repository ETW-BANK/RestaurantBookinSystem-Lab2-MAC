@model RestaurantViewModels.CategoryVM

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient mt-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2"> @(Model.Id != 0 ? "Update" : "Create") Category</h2>

            </div>

        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <input asp-for="Id" hidden />

            <div class="row">
                <div class="col-10">
                    <div class="border p-3">
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Name" class="form-control border-0 shadow" />
                            <label asp-for="Name" class="ms-2 "></label>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <input asp-for="Description" class="form-control border-0 shadow" />
                            <label asp-for="Description" class="ms-2 "></label>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <!-- 🖼️ Image URL Input (Optional) -->
                        <div class="form-floating py-2 col-12">
                            <input asp-for="ImageUrl" class="form-control border-0 shadow" placeholder="Enter image URL" />
                            <label asp-for="ImageUrl" class="ms-2 ">Image URL (Optional)</label>
                            <span asp-validation-for="ImageUrl" class="text-danger"></span>
                        </div>

                        <!-- 📂 File Upload Input (Newly Added) -->
                        <div class="py-2 col-12">
                            <label asp-for="ImageFile" class="ms-2">Upload Image</label>
                            <input asp-for="ImageFile" type="file" class="form-control border-0 shadow" />
                            <span asp-validation-for="ImageFile" class="text-danger"></span>
                        </div>

                        <!-- 🖼️ Preview Uploaded Image -->
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <div class="py-2 col-12">
                                <label class="ms-2">Current Image</label>
                                <div>
                                    <img src="@Model.ImageUrl" alt="Category Image" class="img-thumbnail" width="100" height="100" />
                                </div>
                            </div>
                        }

                        <div class="row pt-2">
                            <div class="col-6 col-md-3">
                                @if (Model.Id != 0)
                                {
                                    <button type="submit" class="btn btn-primary form-control">Update</button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-primary form-control">Create</button>
                                }
                            </div>

                            <div class="col-6 col-md-3">
                                <a asp-controller="Categories" asp-action="Index" class="btn btn-outline-primary border form-control">Back To List</a>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </form>


    </div>

</div>




@section Scripts {


    <partial name="_ValidationScriptsPartial" />
}