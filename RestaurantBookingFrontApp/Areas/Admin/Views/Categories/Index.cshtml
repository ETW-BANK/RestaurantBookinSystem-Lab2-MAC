@model IEnumerable<RestaurantViewModels.CategoryVM>

@{
    ViewData["Title"] = "GetAllCategories";
}

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient mt-0 py-3">
        <h4 class="text-center text-white mb-0">Category List</h4>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Categories" asp-area="Admin" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Create New Category
                </a>
            </div>
        </div>

        <div class="table-responsive">
            <table id="tblData" class="table table-hover table-bordered table-striped text-center" width="100%">
                <thead class="table-dark">
                    <tr>
                        <th class="text-center small">ID</th>
                        <th class="text-center small">Name</th>

                        <th class="text-center small">Image</th>

                        <th class="text-center small">Action</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/CategoryList.js"></script>
}
