@model List<Category>

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient mt-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Category List</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
                <a asp-action="Create" class="btn btn-primary">Create New Category</a>
            </div>
        </div>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Display Order</th>
                    <th>Image</th> <!-- Added Image column -->
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
                    <tr>
                        <td>@(category?.Name ?? "N/A")</td>
                        <td>@(category?.DisplayOrder.ToString() ?? "N/A")</td>
                        <td>
                            @if (category?.Name!= null && !string.IsNullOrEmpty(category.ImageUrl))
                            {
                                <img src="@($"https://localhost:44307{category.ImageUrl}")" alt="Category Image" style="max-width: 100px; max-height: 100px;" />
                            }
                            else
                            {
                                <span>No Image</span>
                            }
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@category?.Id" class="btn btn-warning">Edit</a>
                            <form asp-action="Delete" method="post" class="d-inline">
                                <input type="hidden" name="id" value="@category?.Id" />
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>