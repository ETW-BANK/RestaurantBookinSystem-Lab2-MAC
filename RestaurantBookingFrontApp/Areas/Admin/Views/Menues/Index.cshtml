@model IEnumerable<Menue>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient mt-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Menu List</h2>

            </div>

        </div>
    </div>
    <div class="card-body p-4">

        <div class="row pb-3 ">
            <div class="col-6">
            </div>

            <div class="col-6 text-end">

                <a asp-controller="Menues" asp-action="Upsert" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Create New Menu
                </a>

            </div>
        </div>


        <table class="table table-bordered table-striped">

            <thead>
                <tr>

                    <th> Name</th>
                    <th> Discription</th>
                    <th> Category</th>
                    <th> Price</th>
                    <th> Qty</th>
                    <th> Image</th>
                    <th> IsAvailable</th>
                    <th> Action</th>
                </tr>
            </thead>
            <tbody>

               @if (Model != null)
            {
                @foreach (var item in Model)
                {
                    <tr>


                        <td>@item.Name</td>
                        <td>@item.Description</td>
                        <td>@(item.Category.Name != null ? item.Category.Name: "No Category")</td>
                         <td>@item.Price</td>
                         <td>@item.Qty</td>

                        <td>
                            @if (!string.IsNullOrEmpty(item.ImageUrl))
                            {
                                <img src="@item.ImageUrl" width="50px" />
                            }
                            else
                            {
                                <span>No Image</span>
                            }
                        </td>
                        <td>@item.Available</td>
                        <td>

                            <div class="w-75 btn-group" role="group">

                                <a asp-controller="Menues" asp-action="Upsert" asp-route-id="@item.menueId" class="btn btn-primary mx-2">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>

                                <a asp-controller="Menues" asp-action="Delete" asp-route-id="@item.menueId" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash-fill"></i> Delete
                                </a>

                            </div>

                        </td>
                    </tr>
                }
}
            </tbody>
        </table>

    </div>
</div>
