@model IEnumerable<TablesVM>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient mt-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Table List</h2>

            </div>

        </div>
    </div>
    <div class="card-body p-4">

        <div class="row pb-3 ">
            <div class="col-6">
            </div>

            <div class="col-6 text-end">

                <a asp-controller="Tables" asp-action="Upsert" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Create New Table
                </a>

            </div>
        </div>


        <table class="table table-bordered table-striped">

            <thead>
                <tr>
                    <th> ID</th>
                    <th> Table Number</th>
                    <th> Number Of Seats</th>
                    <th> Is Available</th>
                    <th> Action</th>
                </tr>
            </thead>
            <tbody>

                @if (Model != null)
                {
                    foreach (var item in Model)
                    {
                        <tr>


                            <td>@item.Id</td>
                            <td>@item.TableNumber</td>
                            <td>@item.NumberOfSeats</td>
                            <td>@(item.IsAvailable ? "Yes" : "No")</td>

                            <td>

                                <div class="w-75 btn-group" role="group">

                                    <a asp-controller="Tables" asp-action="Upsert" asp-route-id="@item.Id" class="btn btn-primary mx-2">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>

                                    <a asp-controller="Tables" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mx-2">
                                        <i class="bi bi-trash-fill"></i> Delete
                                    </a>
                                </div>

                            </td>
                        </tr>
                    }
                }
                else
                {
                    <p>No data available.</p>
                }


            </tbody>
        </table>

    </div>
</div>
