@model IEnumerable<RestaurantViewModels.TablesVM>

@{
    ViewData["Title"] = "GetAllTables";
}

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient mt-0 py-3">
        <h4 class="text-center text-white mb-0">Tables List</h4>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Tables" asp-area="Admin" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Create New Table
                </a>
            </div>
        </div>

        <div class="table-responsive">
            <table id="tblData" class="table table-hover table-bordered table-striped text-center" width="100%">
                <thead class="table-dark">
                    <tr>
                        <th class="text-center small">Table Number</th>
                        <th class="text-center small">Number Of Seats</th>
                        <th class="text-center small">Is Available</th>
                        <th class="text-center small">Action</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/TableList.js"></script>
}
