@model List<UserVm>

@{
    ViewData["Title"] = "GetAllUsers";
}

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient mt-0 py-3">
        <h4 class="text-center text-white mb-0">User List</h4>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Users" asp-area="Admin" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Create New User
                </a>
            </div>
        </div>

        <div class="table-responsive">
            <table id="tblData" class="table table-hover table-bordered table-striped text-center" width="100%">
                <thead class="table-dark">
                    <tr>
                        <th class="text-center small">User Id</th>
                        <th class="text-center small">Name</th>
                        <th class="text-center small">Street Address</th>
                        <th class="text-center small">City</th>
                        <th class="text-center small">Postal Code</th>
                        <th class="text-center small">Phone Number</th>
                        <th class="text-center small">Role</th>
                        <th class="text-center small">Action</th>
                    </tr>
                </thead>
                <tbody>

                    @if (Model != null)
                    {
                        foreach (var item in Model)
                        {
                            <tr>


                                <td>@item.Id</td>
                                <td>@item.Name</td>
                                <td>@item.StreetAddress</td>
                                <td>@item.City</td>
                                <td>@item.PostalCode</td>
                                <td>@item.PhoneNumber</td>
                                <td>@item.Role</td>
                              

                                <td>

                                    <div class="w-75 btn-group" role="group">

                                        <a asp-controller="Users" asp-action="Upsert" asp-route-id="@item.Id" class="btn btn-primary mx-2">
                                            <i class="bi bi-pencil-square"></i> Edit
                                        </a>

                                        <a asp-controller="Users" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mx-2">
                                            <i class="bi bi-trash-fill"></i> Delete
                                        </a>
                                    </div>

                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <p>No data available.</p>
                    }


                </tbody>
            </table>
        </div>
    </div>
</div>


