@model IEnumerable<RestaurantViewModels.UserVm>

@{
    ViewData["Title"] = "Users List";
}

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary text-center py-3">
        <h2 class="text-white">Users List</h2>
    </div>
    <div class="card-body">
        <table id="tblData" class="table table-bordered table-striped text-center">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Address</th>
                    <th>City</th>
                    <th>State</th>
                    <th>Postal Code</th>
                    <th>Phone</th>
                    <th>Role</th>
                    <th>Action</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts {
    <script src="~/js/UserList.js"></script>
}