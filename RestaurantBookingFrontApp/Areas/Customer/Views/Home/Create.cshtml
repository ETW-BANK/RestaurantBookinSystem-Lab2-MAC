@model RestaurantViewModels.BookingVM

@{
    ViewData["Title"] = "Create Booking";
}

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient mt-0 py-3">
        <h3 class="text-white">Reserve Your Table</h3>
    </div>
    <div class="card-body p-4">
        <!-- Display validation errors -->
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>

        <!-- Booking Form -->
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col-12">
                    <div class="border p-3">
                        <!-- User ID (Readonly) -->
                        <div class="form-floating py-2 col-12">
                            <input asp-for="ApplicationUserId" hidden />

                        </div>

                        <!-- Booking Date -->
                        <div class="form-floating py-2 col-12">
                            <input asp-for="BookingDate" class="form-control border-0 shadow" type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                            <label asp-for="BookingDate" class="ms-2">Booking Date</label>
                            <span asp-validation-for="BookingDate" class="text-danger"></span>
                        </div>

                        <!-- Booking Time -->
                        <div class="form-floating py-2 col-12">
                            <input asp-for="BookingTime" class="form-control border-0 shadow" type="time" />
                            <label asp-for="BookingTime" class="ms-2">Booking Time</label>
                            <span asp-validation-for="BookingTime" class="text-danger"></span>
                        </div>

                        <!-- Number of Guests -->
                        <div class="form-floating py-2 col-12">
                            <input asp-for="NumberOfGuests" class="form-control border-0 shadow" type="number" min="1" max="20" />
                            <label asp-for="NumberOfGuests" class="ms-2">Number of Guests</label>
                            <span asp-validation-for="NumberOfGuests" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <input asp-for="TableNumber" class="form-control border-0 shadow" type="number" min="1" max="20" />
                            <label asp-for="TableNumber" class="ms-2">Table Number</label>
                            <span asp-validation-for="TableNumber" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="TableId" class="form-control border-0 shadow" type="number" />
                            <label asp-for="TableId" class="ms-2">
                                Table Id
                                <table>
                                    <tr>
                                        <td></td>
                                    </tr>
                                </table>
                            </label>
                            <span asp-validation-for="TableId" class="text-danger"></span>
                        </div>


                        <div class="row mt-4">
                            <div class="col-6 col-md-3">
                                <button type="submit" class="btn btn-primary form-control">Submit</button>
                            </div>
                            <div class="col-6 col-md-3">
                                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary border form-control">Back to Home</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
